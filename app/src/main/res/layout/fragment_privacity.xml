<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@string/app_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginTop="54dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="Aviso de privacidad"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="110dp" />



            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="@string/privacity"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints,TextSizeCheck"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="185dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="2. Uso de MyRoute"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="204dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="El uso de MyRoute está sujeto a estos términos y condiciones. Al utilizar MyRoute, el usuario acepta y se compromete a cumplir con estos términos y condiciones. AA El puente de contención se reserva el derecho de cambiar estos términos y condiciones en cualquier momento y sin previo aviso."
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints,TextSizeCheck"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="185dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="3. Acceso a la ubicación del usuario"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="204dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="MyRoute tiene acceso a la ubicación del usuario para proporcionar información sobre rutas cercanas a su ubicación. AA El puente de contención se compromete a no compartir la información de ubicación del usuario con terceros sin su consentimiento explícito."
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints,TextSizeCheck"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="185dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="4. Exención de responsabilidad"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="204dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="AA El puente de contención no se hace responsable de la precisión, integridad o actualidad de la información proporcionada por el gobierno o entidad encargada de manejar las rutas en su localidad. El usuario reconoce y acepta que MyRoute se proporciona &quot;tal cual&quot; y que AA El puente de contención no garantiza que la aplicación esté libre de errores o interrupciones."
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="185dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="5. Propiedad intelectual"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="204dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="AA El puente de contención es propietario de todos los derechos de propiedad intelectual relacionados con MyRoute, incluyendo, pero no limitado a, el diseño, la programación, los gráficos y el contenido de la aplicación. La aplicación utiliza iconos bajo licencia gratuita de la página web &quot;icons8&quot;."
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="185dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="6. Ley aplicable"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="204dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="Estos términos y condiciones se regirán e interpretarán de acuerdo con las leyes del Estado de Jalisco, México."
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="185dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="7. Jurisdicción exclusiva"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:textStyle="bold"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="204dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="Cualquier disputa que surja en relación con el uso de MyRoute se resolverá exclusivamente en los tribunales del Estado de Jalisco, México."
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="185dp" />

            <TextView
                android:layout_width="371dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:lineSpacingExtra="4dp"
                android:text="Al utilizar MyRoute, el usuario reconoce haber leído, entendido y aceptado estos términos y condiciones en su totalidad. En caso de que alguna disposición de estos términos y condiciones sea considerada inválida o inaplicable, las demás disposiciones seguirán siendo válidas y aplicables."
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="20dp"
                tools:layout_editor_absoluteY="185dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>