<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@android:color/transparent"
                android:elevation="8dp"
                android:src="@drawable/circulo_ext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:background="@android:color/transparent"
                android:elevation="8dp"
                android:src="@drawable/circulo_int"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <ImageView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                android:gravity="center"
                android:src="@drawable/icono"
                android:padding="20dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/panel" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="55dp"
                android:gravity="center_vertical"
                android:text="Panel"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:rotation="180"
                android:src="@drawable/flecha" />

            <Button
                android:id="@+id/btnPanel"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/about" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="55dp"
                android:gravity="center_vertical"
                android:text="Acerca de"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:rotation="180"
                android:src="@drawable/flecha" />

            <Button
                android:id="@+id/btnAbout"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/terms" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="55dp"
                android:gravity="center_vertical"
                android:text="Terminos y condiciones"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:rotation="180"
                android:src="@drawable/flecha" />

            <Button
                android:id="@+id/btnTerms"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:src="@drawable/privacidad" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="55dp"
                android:gravity="center_vertical"
                android:text="Aviso de privacidad"
                android:textSize="20dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:rotation="180"
                android:src="@drawable/flecha" />

            <Button
                android:id="@+id/btnPrivacity"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@android:color/transparent" />
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>